<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #404242;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <AnchorPane layoutX="25.0" layoutY="25.0" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: #e6d3a3;">
         <children>
            <JFXTextField fx:id="userName" layoutX="109.0" layoutY="47.0" promptText="Enter user name" />
            <JFXTextField fx:id="passwordShow" layoutX="109.0" layoutY="92.0" />
            <JFXPasswordField fx:id="password" layoutX="109.0" layoutY="92.0" promptText="Enter password" />
            <JFXCheckBox fx:id="showPass" checkedColor="BLACK" layoutX="107.0" layoutY="133.0" onAction="#isShowPassword" text="Show password" />
            <JFXButton layoutX="31.0" layoutY="171.0" onAction="#switchToRegisterScene" styleClass="button2" stylesheets="@style.css" text="Create new user">
               <graphic>
                  <ImageView fitHeight="26.25" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Media/register.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton layoutX="225.0" layoutY="171.0" onAction="#login" styleClass="button2" text="Login">
               <graphic>
                  <ImageView fitHeight="64.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Media/login.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton layoutX="105.0" layoutY="228.0" onAction="#switchToForgotPass" text="Forgot my password" underline="true" />
            <ImageView fitHeight="26.25" fitWidth="35.0" layoutX="69.0" layoutY="91.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Media/password.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="26.25" fitWidth="35.0" layoutX="68.0" layoutY="46.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Media/user.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="75.0" fitWidth="88.0" layoutX="254.0" layoutY="258.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Media/cocktail.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
